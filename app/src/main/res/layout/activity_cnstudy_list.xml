<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fzp.mystudyandroid.cnStudy.CNStudyListActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_vertical_medium"
            android:layout_marginRight="@dimen/spacing_horizontal_medium"
            android:layout_marginLeft="@dimen/spacing_horizontal_medium"
            android:orientation="vertical">

            <TextView
            android:id="@+id/tv_toSimpleInterface"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="Build Your First App"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold|italic"/>

            <!-- 分割线 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/spacing_vertical_medium"
                android:background="@color/colorLightGray"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
