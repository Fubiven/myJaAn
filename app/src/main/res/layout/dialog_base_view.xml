<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="264dp"
              android:background="@drawable/dialog_corner_bg"
              android:orientation="vertical">
    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_dialog_title"
        android:background="@drawable/dialog_title_bg"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_big"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="title"
        android:paddingBottom="@dimen/spacing_horizontal_small">
    </TextView>

    <!-- 对话框主体(根据具体情况进行填充) -->
    <FrameLayout
        android:id="@+id/fl_dialog_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="100dp"
        android:padding="@dimen/spacing_horizontal_large"
        android:paddingBottom="@dimen/spacing_horizontal_small"
        >
    </FrameLayout>

    <TextView
        android:id="@+id/tv_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="@dimen/spacing_horizontal_large"
        android:layout_marginRight="@dimen/spacing_horizontal_large"
        android:layout_marginBottom="@dimen/spacing_vertical_small"/>

    <!-- 底部按钮栏（0-3个） -->
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/spacing_vertical_small"
        >
        <TextView
            android:id="@+id/tv_dialog_btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="cancle"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:padding="@dimen/spacing_horizontal_small"
            android:background="@drawable/dialog_btn_bg_selector"
            android:layout_marginLeft="@dimen/spacing_horizontal_medium"
            android:layout_marginRight="@dimen/spacing_horizontal_medium"
            />
        <TextView
            android:id="@+id/tv_dialog_btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="middle"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:padding="@dimen/spacing_horizontal_small"
            android:background="@drawable/dialog_btn_bg_selector"
            android:layout_marginLeft="@dimen/spacing_horizontal_medium"
            android:layout_marginRight="@dimen/spacing_horizontal_medium"/>
        <TextView
            android:id="@+id/tv_dialog_btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="comfirm"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:padding="@dimen/spacing_horizontal_small"
            android:background="@drawable/dialog_btn_bg_selector"
            android:layout_marginLeft="@dimen/spacing_horizontal_medium"
            android:layout_marginRight="@dimen/spacing_horizontal_medium"/>
    </LinearLayout>


</LinearLayout>
